{
  "name": "unicolored.github.io",
  "version": "1.1.3",
  "description": "Welcome to **The Red Journey**, my creative space at [unicolo.red](https://unicolo.red). This Jekyll-powered blog, hosted on GitHub Pages, is where I share projects, ideas, and experimentsâ€”tinted with a red-hued twist.",
  "scripts": {
    "build:css": "npx postcss assets/css/main.css -o _site/assets/css/style.css --verbose",
    "watch:css": "npx postcss assets/css/main.css -o _site/assets/css/style.css --watch",
    "start": "yarn build:site:local && yarn build:css && concurrently \"yarn watch:css\" \"bundle exec jekyll serve --watch\"",
    "format": "npx prettier --write \"**/*.{js,css,md,markdown,yml,yaml}\"",
    "check": "npx prettier --check \"**/*.{js,css,md,markdown,yml,yaml}\"",
    "proof": "bundle exec htmlproofer ./_site --check-external-hash --ignore-urls \"/localhost/,/buymeacoffee/\"",
    "build:site": "bundle exec jekyll build --config _config.yml",
    "build:site:local": "bundle exec jekyll build --config _config.yml,_config.local.yml",
    "build:site:prod": "bundle exec jekyll build --config _config.yml,_config.prod.yml,_config.secrets.yml",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.0.14",
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "cssnano": "^7.0.6",
    "postcss": "^8.5.3",
    "postcss-cli": "^11.0.1",
    "postcss-import": "^16.1.0",
    "prettier": "^3.5.3",
    "tailwindcss": "^4.0.14"
  },
  "packageManager": "yarn@4.8.1"
}
